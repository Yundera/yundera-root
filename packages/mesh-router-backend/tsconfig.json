{
  "compilerOptions": {
    "module": "NodeNext",
    "target": "ESNext",
    "outDir": "dist",
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop":true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "moduleResolution": "NodeNext",
    "baseUrl": "." /* Base directory to resolve non-absolute module names. */,
    "types" : ["node", "express", "mocha"],
    "typeRoots": ["@types", "node_modules/@types"]
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
